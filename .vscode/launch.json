    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Full App",
            "type": "python",
            "request": "launch",            
            "program": "${workspaceFolder}\\main.py",
            "cwd": "${workspaceFolder}",
            "args": [],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Web Only",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "cwd": "${workspaceFolder}\\web",
            "jinja": true,
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}