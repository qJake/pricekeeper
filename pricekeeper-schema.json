{
    "storage": {
        "type": "dict",
        "required": true,
        "schema": {
            "type": {
                "type": "string",
                "required": true,
                "allowed": [
                    "azure"
                ]
            },
            "account": {
                "type": "string",
                "required": true,
                "regex": "^[a-z0-9]{3,24}$"
            },
            "key": {
                "type": "string",
                "required": true
            },
            "table": {
                "type": "string",
                "required": false,
                "regex": "^[a-zA-Z][a-zA-Z0-9]{2,62}$"
            }
        }
    },
    "scheduler": {
        "type": "dict",
        "required": false,
        "schema": {
            "spreadtime": {
                "type": "integer",
                "min": 0,
                "max": 3600
            }
        }
    },
    "rules": {
        "type": "list",
        "schema": {
            "type": "dict",
            "schema": {
                "name": {
                    "type": "string",
                    "required": true,
                    "empty": false
                },
                "template": {
                    "type": "string",
                    "required": false
                },
                "url": {
                    "type": "string",
                    "required": true,
                    "empty": false
                },
                "referer": {
                    "type": "string",
                    "required": false
                },
                "hours": {
                    "type": ["string", "integer"],
                    "required": true,
                    "empty": false
                },
                "mins": {
                    "type": ["string", "integer"],
                    "required": false
                },
                "divide": {
                    "type": "boolean",
                    "required": false
                },
                "category": {
                    "type": "string",
                    "required": true,
                    "empty": false
                },
                "regex": {
                    "type": ["string", "list"],
                    "required": false
                },
                "selector": {
                    "type": ["string", "list"],
                    "required": false
                }
            }
        }
    },
    "templates": {
        "type": "dict",
        "required": false,
        "keysrules": {
            "type": "string",
            "regex": "^[a-zA-Z0-9]+$"
        },
        "valuesrules": {
            "type": "dict",
            "schema": {
                "url": {
                    "type": "string",
                    "required": false
                },
                "referer": {
                    "type": "string",
                    "required": false
                },
                "hours": {
                    "type": ["string", "integer"],
                    "required": false
                },
                "mins": {
                    "type": ["string", "integer"],
                    "required": false
                },
                "divide": {
                    "type": "boolean",
                    "required": false
                },
                "category": {
                    "type": "string",
                    "required": false
                },
                "regex": {
                    "type": ["string", "list"],
                    "required": false
                },
                "selector": {
                    "type": ["string", "list"],
                    "required": false
                }
            }
        }
    },
    "cache": {
        "type": "dict",
        "required": false,
        "keysrules": {
            "type": "string"
        },
        "valuesrules": {
            "type": "integer",
            "min": 1,
            "max": 604800
        }
    }
}